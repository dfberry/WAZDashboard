@model List<Wp7AzureMgmt.DashboardFeeds.Models.RSSFeed>
@section AddToHead{ 

    <!--CSS Files-->
    <link href="@Url.Content("~/Content/jquery-ui-1.8.7.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/ui.multiselect.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/i18n/grid.locale-en.js")" type="text/javascript"></script>
@{#if DEBUG} 
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.src.js")" type="text/javascript"></script>
@{#else } 
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
@{#endif} 

    <!--jqGrid Code - refer http://www.trirand.com/blog/jqgrid/jqgrid.html -->
    <script type="text/javascript">
        jQuery(document).ready(function () {
            jQuery("#list").jqGrid({
                url: '/Home/DynamicGridData/',
                datatype: 'json',
                mtype: 'POST',
                colNames: ['Id', 'Service', 'Location', 'Feed Code', 'RSS Link'],
                colModel: [
   		            { name: 'Id', index: 'Id', width: 20 },
   		            { name: 'ServiceName', index: 'ServiceName', width: 200 },
   		            { name: 'LocationName', index: 'LocationName', width: 200 },
   		            { name: 'FeedCode', index: 'FeedCode', width: 80 },
                    { name: 'RSSLink', index: 'RSSLink', width: 300 }
   	            ],
                pager: jQuery('#pager'),
                rowNum: 100,
                rowList: [10, 50, 100],
                sortname: 'Id',
                sortorder: "desc",
                viewrecords: true,
                imgpath: '',
                gridview: true,
                loadonce: true,
                caption: "Configure group header row"
            });
        });
</script>

} 

@{
    ViewBag.Title = "FeedListGroupGrid";
}


<h2>FeedListGroupGrid</h2>
    <table id="list" class="scroll" cellpadding="0" cellspacing="0"></table>
    <div id="pager" class="scroll" style="text-align:center;"></div>
