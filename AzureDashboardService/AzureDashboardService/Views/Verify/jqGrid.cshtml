<h2>jqGrid</h2>
<form id='filter' action="">
    1st Filter
    <select id="ctlFilter1" >
        <option value="ServiceName" >ServiceName</option>
        <option value="LocationName" >LocationName</option>
        <option value="IssueStatus" >IssueStatus</option>
    </select>
    <br />
    2nd Filter<select id="ctlFilter2">
        <option value="3">3 day</option>
        <option value="7" >7 days</option>
        <option value="14">14 days</option>
        <option value="30">30 days</option>
    </select>
    <br />
    Sort 
    <select id="ctlSort" >
        <option value="IssueDate">IssueDate</option>
        <option value="LocationName" >LocationName</option>
        <option value="ServiceName" >ServiceName</option>
        <option value="IssueStatus" >IssueStatus</option>
    </select>
    <br />    
    <!--<input id="chngroup" type="checkbox" checked="checked">Grouped</><br />-->
    <input id="form-submit" type="submit" value="Submit" />    
</form>
<table id="dfbHtmlTable" />
