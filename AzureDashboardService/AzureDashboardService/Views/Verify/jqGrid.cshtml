    ViewBag.Title = "jqGrid";
}
@section AddToHead{
    <link href="~/Content/jqGrid/jquery-ui-1.8.7.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/jqGrid/ui.jqgrid.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/jqGrid/ui.multiselect.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jqGrid/i18n/grid.locale-en.js" type="text/javascript"></script>
